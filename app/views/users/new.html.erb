<div>
  <%= form_for :user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <br>

    <%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation  %>

    <br><br>

    <%= f.submit "Create Account" %>
  <% end %>
</div>
